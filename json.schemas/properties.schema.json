{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "description": "The properties of the instance",
    "properties": {
        "Axes": {
            "$ref": "#/$defs/Axes"
        },
        "Attributes": {
            "$ref": "#/$defs/Attributes"
        },
        "BinaryString": {
            "$ref": "#/$defs/BinaryString"
        },
        "BrickColor": {
            "$ref": "#/$defs/BrickColor"
        },
        "CFrame": {
            "$ref": "#/$defs/CFrame"
        },
        "Color3": {
            "$ref": "#/$defs/Color3"
        },
        "Color3uint8": {
            "$ref": "#/$defs/Color3uint8"
        },
        "ColorSequence": {
            "$ref": "#/$defs/ColorSequence"
        },
        "Content": {
            "$ref": "#/$defs/Content"
        },
        "Enum": {
            "$ref": "#/$defs/Enum"
        },
        "Faces": {
            "$ref": "#/$defs/Faces"
        },
        "Float32": {
            "$ref": "#/$defs/Float32"
        },
        "Float64": {
            "$ref": "#/$defs/Float64"
        },
        "Font": {
            "$ref": "#/$defs/Font"
        },
        "Int32": {
            "$ref": "#/$defs/Int32"
        },
        "Int64": {
            "$ref": "#/$defs/Int64"
        },
        "MaterialColors": {
            "$ref": "#/$defs/MaterialColors"
        },
        "NumberRange": {
            "$ref": "#/$defs/NumberRange"
        },
        "NumberSequence": {
            "$ref": "#/$defs/NumberSequence"
        },
        "OptionalCoordinateFrame": {
            "$ref": "#/$defs/OptionalCoordinateFrame"
        },
        "PhysicalProperties": {
            "$ref": "#/$defs/PhysicalProperties"
        },
        "ProtectedString": {
            "$ref": "#/$defs/ProtectedString"
        },
        "Ray": {
            "$ref": "#/$defs/Ray"
        },
        "Rect": {
            "$ref": "#/$defs/Rect"
        },
        "Ref": {
            "$ref": "#/$defs/Ref"
        },
        "Region3": {
            "$ref": "#/$defs/Region3"
        },
        "Region3int16": {
            "$ref": "#/$defs/Region3int16"
        },
        "SharedString": {
            "$ref": "#/$defs/SharedString"
        },
        "String": {
            "$ref": "#/$defs/String"
        },
        "Tags": {
            "$ref": "#/$defs/Tags"
        },
        "UDim": {
            "$ref": "#/$defs/UDim"
        },
        "UDim2": {
            "$ref": "#/$defs/UDim2"
        },
        "Vector2": {
            "$ref": "#/$defs/Vector2"
        },
        "Vector2int16": {
            "$ref": "#/$defs/Vector2int16"
        },
        "Vector3": {
            "$ref": "#/$defs/Vector3"
        },
        "Vector3int16": {
            "$ref": "#/$defs/Vector3int16"
        }
    },
    "$defs": {
        "Axes": {
            "type": "array",
            "description": "Locks the object to move in a single axis.",
            "enum": [
                ["X","Y","Z"],
                ["X","Y"],
                ["Y","Z"],
                ["X","Z"],
                ["X"],
                ["Y"],
                ["Z"]
            ],
            "default": ["X","Y","Z"]
        },
        "Attributes": {
            "$comment": "TODO: attributes schema",
            "description": "Work in progress!",
            "type": "object",
            "patternProperties": {
                ".*": {
                    "anyOf": [
                        {"type": "string"},
                        {"type": "number"}
                    ]
                }
            }
        },
        "BinaryString": {
            "type": "string",
            "description": "Base64 Encoded String",
            "default": ""
        },
        "BrickColor": {
            "type": "number",
            "description": "Default colors provided by Roblox.",
            "minimum": 1,
            "maximum": 1032,
            "default": 1
        },
        "CFrame": {
            "type": "object",
            "description": "Specifies the object's position and orientation in 3D space.",
            "properties": {
                "position": {
                    "type": "array",
                    "description": "[\n\tX,\n\tY,\n\tZ\n]",
                    "minItems": 3,
                    "maxItems": 3,
                    "items": {
                        "type": "number"
                    },
                    "default": [0.0,0.0,0.0]
                },
                "orientation": {
                    "type":"array",
                    "description": "[\n\t[X,Y,Z],\n\t[X,Y,Z],\n\t[X,Y,Z]\n]",
                    "minItems": 3,
                    "maxItems": 3,
                    "items": {
                        "type":"array",
                        "minItems":3,
                        "maxItems": 3,
                        "items": {
                            "type": "number"
                        }
                    },
                    "default": [[0,0,0],[0,0,0],[0,0,0]]
                }
            },
            "required": ["position", "orientation"]
        },
        "Color3": {
            "type": "array",
            "description": "Customizable colors. It uses normalized values for RGB.",
            "minItems": 3,
            "maxItems": 3,
            "items": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
            },
            "default": [0.5,0.5,0.5]
        },
        "Color3uint8": {
            "type": "array",
            "description": "Customizable colors. It uses ranges of 0-255 for RGB.",
            "minItems": 3,
            "maxItems": 3,
            "items": {
                "type": "integer",
                "minimum": 0,
                "maximum": 255
            },
            "default": [126,126,126]
        },
        "ColorSequence": {
            "type": "object",
            "description": "Gradient of colors.",
            "properties": {
                "keypoints": {
                    "type": "array",
                    "description": "Specifies the stops for each color.",
                    "minItems": 1,
                    "items": {
                        "type": "object",
                        "properties": {
                            "time": {
                                "type": "number",
                                "description": "Must be a normalized value.",
                                "minimum": 0,
                                "maximum": 1
                            },
                            "color": {
                                "$ref": "#/$defs/Color3"
                            }
                        },
                        "required": ["time", "color"]
                    }
                }
            },
            "required": ["keypoints"]
        },
        "Content": {
            "type": "string",
            "description": "A valid roblox assetid",
            "oneOf": [
                {
                    "pattern": "rbxassetid:\/{2}[0-9]+",
                    "default": "rbxassetid://00000000000"
                },
                {
                    "pattern": "rbxasset:\/{2}([A-Za-z0-9\\-\\_]+\/|[A-Za-z0-9\\-\\_]+\\.)*([A-Za-z0-9\\-\\_]+\\.[A-Za-z0-9]+)(?!.*\/+|.*\\.+)",
                    "default": "rbxasset://folder-name/file_name.png",
                    "description": "Roblox Content Folder"
                },
                {
                    "pattern": "rbxthumb:\/{2}type=[A-Za-z]+&id=[0-9]+&w=[0-9]+&h=[0-9]+",
                    "default": "rbxthumb://type=asset&id=00000000&w=00&h=00",
                    "description": "Roblox Thumbnails"
                },
                {
                    "pattern": "rbxgameasset:\/{2}(|([A-Za-z0-9])+\/)+([A-Za-z0-9])+",
                    "default": "rbxgameasset://folderName/fileName",
                    "description": "Asset Manager"
                },
                {
                    "pattern": "https?:\/{2}(w{3}|[A-Za-z]*)\\.roblox\\.com[A-Za-z\\?\/=0-9]+",
                    "default": "https://create.roblox.com/",
                    "description": "Only supports Roblox-approved domains."
                },
                {
                    "pattern": "rbxtemp:\/{2}[0-9]+",
                    "default": "rbxtemp://00",
                    "description": "Files uploaded through StudioService:PromptImportFile."
                }
            ]
        },
        "Enum": {
            "type": "integer",
            "minimum": 0
        },
        "Faces": {
            "type": "array",
            "items": {
                "enum": [
                    "Right", "Top", "Back", "Left", "Bottom", "Front"
                ]
            },
            "minItems": 1,
            "maxItems": 6,
            "uniqueItems": true
        },
        "Float32": {
            "type": "number"
        },
        "Float64": {
            "type": "number"
        },
        "Font": {
            "$comment": "TODO: Add enums",
            "type": "object",
            "properties": {
                "family": {
                    "type": "string"
                },
                "weight": {
                    "type": "string"
                },
                "style": {
                    "type": "string"
                }
            },
            "required": ["family", "weight", "style"]
        },
        "Int32": {
            "type": "integer"
        },
        "Int64": {
            "type": "integer"
        },
        "MaterialColors": {
            "type": "object",
            "$comment": "TODO: Add materials enum",
            "properties": {
                "Grass": {
                    "$ref": "#/$defs/Color3uint8"
                }
            }
        }
    }
}
