{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "UDim",
    "description": "The scale of the 2D element and its offset",
    "type": "object",
    "properties": {
        "UDim": { "$ref": "#/$defs/UDim" }
    },
    "required": ["UDim"],
    "$defs": {
        "UDim": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "prefixItems": [
                {
                    "type": "number"
                },
                {
                    "type": "integer"
                }
            ]
        }
    }
}
