{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "asphalt sync studio",
            "type": "shell",
            "command": "asphalt sync --target studio"
        },
        {
            "label": "asphalt upload",
            "type": "shell",
            "command": "asphalt sync --target cloud --api-key ${input:asphaltApiKey}"
        },
        {
            "label": "rojo serve",
            "type": "shell",
            "command": "rojo serve",
            "isBackground": true,
            "presentation": {
                "reveal": "silent",
            }
        },
        {
            "label": "__rbxtscbuild",
            "type": "shell",
            "command": "npm run 'rbxtsc build'",
            "hide": true,
            "group": "build"
        },
        {
            "label": "__rojobuild",
            "type": "shell",
            "command": "rojo build --output ${input:placeFileName}.${input:placeFileExtension}",
            "hide": true,
            "group": "build"
        },
        {
            "label": "__moonwavebuild",
            "type": "shell",
            "command": "npm run 'moonwave build'",
            "hide": true,
            "group": "build"
        },
        {
            "label": "Build Project",
            "type": "shell",
            "dependsOn": ["__rbxtscbuild","__rojobuild","__moonwavebuild"],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "inputs": [
        {
            "id": "placeFileName",
            "type": "promptString",
            "description": "Place filename",
            "default": "place"
        },
        {
            "id": "placeDirectory",
            "type": "promptString",
            "description": "The location of your place files as an path. If it doesn't exist, it will try to create one.",
            "default": "places"
        },
        {
            "id": "placeFileExtension",
            "type": "pickString",
            "description": "Choose the file extension of your place file.",
            "options": ["rbxl", "rbxlx"]
        },
        {
            "id": "placePublishingKey",
            "type": "promptString",
            "description": "Your Place Publishing API Key"
        },
        {
            "id": "universeId",
            "type": "promptString",
            "description": "Your Universe ID"
        },
        {
            "id": "asphaltApiKey",
            "type": "promptString",
            "description": "Your API Key for Asphalt synchronization",
            "password": true
        },
        {
            "id": "assetDirectory",
            "type": "promptString",
            "description": "Your Asset Directory"
        },
        {
            "id": "assetId",
            "type": "promptString",
            "description": "Your Asset ID"
        },
        {
            "id": "rbxcloudPlaceFilepath",
            "type": "promptString",
            "description": "The absolute or relative path of the place file to upload."
        },
        {
            "id": "versionType",
            "type": "pickString",
            "description": "saved = only upload to Roblox; published = upload and release it to the public",
            "options": ["saved", "published"]
        }
    ]
}
