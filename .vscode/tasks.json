{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "rojo serve",
            "type": "shell",
            "command": "rojo serve",
        },
        {
            "label": "rojo build place",
            "type": "shell",
            "windows": {
                "command": "lune run ./lune/RojoBuildPlace.luau ${input:placeDirectory} ${input:placeFileName} ${input:placeFileExtension}"
            }
            
        },
        {
            "label": "lune run",
            "type": "shell",
            "command": "lune run ${file}"
        },
        {
            "label": "Install moonwave",
            "type": "shell",
            "command": "npm i -g moonwave"
        },
    ],
    "inputs": [
        {
            "id": "placeFileName",
            "type": "promptString",
            "description": "Place filename",
            "default": "place"
        },
        {
            "id": "placeDirectory",
            "type": "promptString",
            "description": "The location of your place files as an path. If it doesn't exist, it will try to create one.",
            "default": "places"
        },
        {
            "id": "placeFileExtension",
            "type": "pickString",
            "description": "Choose the file extension of your place file.",
            "options": [".rbxl", ".rbxlx"]
        }
    ]
}
